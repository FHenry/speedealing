{
	"_id": "extrafields:User",
	"class": "extrafields",
	"ico": "icon-object-user",
	"schemaMongoose": {
		"enabled": true,
		"name": "user",
		"collection": "User",
		"plugins": ["mongoose-timestamp"]
	},
	"langs": [
		"users",
		"admin"
	],
	"fields": {
		"_id": {
			"schema": "String",
			"type": "text",
			"enable": true,
			"list": {
				"visible": false,
				"static": true
			}
		},
		"Status": {
			"schema": "Mixed",
			"type": "select",
			"enable": true,
			"default": "DISABLE",
			"status": true,
			"aoColumns": {
				"sClass": "center",
				"bSearchable": true,
				"bVisible": true
			},
			"values": {
				"DISABLE": {
					"enable": true,
					"label": "Bloqué",
					"cssClass": "red-gradient"
				},
				"ENABLE": {
					"enable": true,
					"label": "Actif",
					"cssClass": "green-gradient"
				},
				"NOCONNECT": {
					"enable": true,
					"label": "Actif/Sans conex.",
					"cssClass": "blue-gradient"
				}
			}
		},
		"StatusAbsence": {
			"schema": "Mixed",
			"type": "select",
			"enable": true,
			"default": "NOTJUSTIFIED",
			"status": true,
			"aoColumns": {
				"sClass": "center",
				"bSearchable": true,
				"bVisible": true
			},
			"values": {
				"REQUEST": {
					"enable": false,
					"label": "Demande",
					"cssClass": "blue-gradient"},
				"NOTJUSTIFIED": {
					"enable": true,
					"label": "Absence injustifiée",
					"cssClass": "red-gradient"},
				"HOLIDAY": {
					"enable": true,
					"label": "En conges",
					"cssClass": "green-gradient"},
				"ILL": {
					"enable": true,
					"label": "Absence maladie",
					"cssClass": "orange-gradient"},
				"REFUSED": {
					"enable": false,
					"label": "Refuse",
					"cssClass": "red-gradient"}
			}
		},
		"email": {
			"schema": "String"
		},
		"admin": {
			"schema": "Boolean"
		},
		"lastname": {
			"schema": "String"
		},
		"firstname": {
			"schema": "String"
		},
		"password": {
			"schema": "String"
		},
		"name": {
			"schema": {"type": "String", "require": true}
		},
		"roles": {
			"schema": ["String"]
		},
		"email": {
			"schema": "String"
		},
		"_createdAt": {
			"schema": {"type": "Date"}
		},
		"LastConnection": {
			"schema": "Date"
		},
		"NewConnection": {
			"schema": "Date"
		},
		"photo": {
			"schema": {"type": "String"}
		},
	}
}